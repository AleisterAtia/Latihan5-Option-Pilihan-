<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#483787"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Menu Dibawah Ini!!"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konversi Suhu"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnSatu"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Kasir"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnDua"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menghitung Permukaan Dan Volume"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnTiga"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Python"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnEmpat"/>
        
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email : fdzakyarhab@gmail.com"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:textColor="#908888"
        android:textStyle="bold"/>


</LinearLayout>




    </LinearLayout>


</LinearLayout>